<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.item.ItemFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBig"
        app:layout_constraintHorizontal_bias="0.498"

        app:layout_constraintStart_toStartOf="@+id/imageViewBig"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBig" />

    <ImageView
        android:id="@+id/imageViewBig"
        android:layout_width="411dp"
        android:layout_height="252dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>